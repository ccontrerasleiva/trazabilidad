@model ViewModels.Models.Locomotora

<div id="modal-create" class="modal fade" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    @using (Html.BeginForm(nameof(Trazabilidad.Controllers.LocomotoraController.Create), nameof(Resources.Strings.Models.Locomotora), FormMethod.Post, htmlAttributes: new { @id = "modal-element-create" }))
                    {
                        <div class="col-sm-12">
                            <h3 class="m-t-none m-b">Ingresar nueva Locomotora</h3>

                            <form role="form">

                                <div class="form-group">
                                    @Html.LabelFor(lc => lc.Descripcion, "Descripción")
                                    @Html.TextBoxFor(cl => cl.Descripcion, htmlAttributes: new { @class = "form-control", placeholder = "Descripción" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(cl => cl.Patente, "Patente")
                                    @Html.TextBoxFor(cl => cl.Patente, htmlAttributes: new { @class = "form-control", placeholder = "Patente" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(lc => lc.PesoTara, "PesoTara")
                                    @Html.TextBoxFor(cl => cl.PesoTara, htmlAttributes: new { @class = "form-control", placeholder = "PesoTara" })
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong><i class="fa fa-plus"></i> Guardar</strong></button>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

