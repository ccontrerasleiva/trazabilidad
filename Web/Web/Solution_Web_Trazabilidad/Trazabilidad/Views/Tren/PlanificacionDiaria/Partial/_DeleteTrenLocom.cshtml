@model ViewModels.Models.Tren_Locomotora
@using (Html.BeginForm(nameof(Trazabilidad.Controllers.TrenController.DeleteTrenLoc), nameof(Resources.Strings.Models.Tren), FormMethod.Post, htmlAttributes: new { @id = "modal-element-delete" }))
{

    <div class="col-md-12">
        <div class="col-md-12">
            <h2 class="m-t-none m-b">Eliminar Locomotora y sus asignados</h2>
        </div>


        @Html.HiddenFor(x => x.Id)

        <form role="form">

            <h4 class="m-t-none m-b">¿Desea eliminar locomotora y tripulantes al tren  ?</h4>

            <div>
                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong><i class="fa fa-plus"></i> Eliminar</strong></button>
            </div>
        </form>


    </div>
}
