@model IEnumerable<ViewModels.Models.Tiempo_Hapa>
@{
    ViewBag.Title = "Estaciones";
    ViewBag.Header = "HAPA";
}

@*BARRA SUPERIOR*@
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-8">
        <h2>@ViewBag.Header</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="active"><strong>HAPA</strong></li>
        </ol>
    </div>
    <div class="col-sm-4">
        <div class="title-action">
            <a data-toggle="modal" href="#modal-create" class="btn btn-primary"><i class="fa fa-plus"></i>  Nuevo Tiempo Hapa</a>
        </div>
    </div>
</div>

@*RESTO DE LA PAGINA*@
<div class="wrapper wrapper-content">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Tiempos Registrados: @Model.Count()</h5>
            </div>
            <div class="ibox-content">
                <table class="table" id="summary">
                    <thead>
                        <tr>
                            <th width="800">Origen</th>
                            <th width="800">Destino</th>
                            <th width="800">Habilitados</th>
                            <th width="800">Tiempo Viaje de Ida</th>
                            <th width="800">Tiempo Viaje de Vuelta</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tTime in Model)
                        {
                            @Html.Partial("Partial/_Tiempo_Hapa", tTime)
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@*MODAL*@
@Html.Partial("Partial/_Create", new ViewModels.Models.Tiempo_Hapa())

@section Scripts {
    <script src="~/Scripts/modal.comun.js"></script>
    <script src="~/Scripts/chosen.jquery.js"></script>
    <script>
        $('.chosen-select').chosen({ width: "100%" });
    </script>
    <script src="~/Scripts/lists.js"></script>
    @Scripts.Render("~/bundles/DTList")
}

@section Styles{
    <link rel="stylesheet" href="~/Content/bootstrap-chosen.css" />
}
