@model ViewModels.Models.Tiempo_Hapa
@using Trazabilidad.Controllers
@using Resources.Strings
<tr>
    @using (Html.BeginForm(nameof(Trazabilidad.Controllers.Tiempo_HapaController.Edit), nameof(Resources.Strings.Models.Tiempo_Hapa), FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.Id_Origen)
        @Html.HiddenFor(x => x.Id_Destino)
        @*<td>@Model.Origin.Name</td>
            <td>@Model.Destination.Name</td>*@

        <td>@Model.Origen.Nombre</td>
        <td>@Model.Destino.Nombre</td>


        if (@Model.Deshabilitado == false)
        {
            <td>Habilitado</td>}
        else
        {
            <td>Deshabilitado</td>}

        <td>
            <div class="input-group">
                @Html.TextBoxFor(model => model.Tiempo_Viaje, htmlAttributes: new { @class = "form-control ", disabled = "disabled" })
            </div>
        </td>

        <td>
            <div class="input-group">
                @Html.TextBoxFor(model => model.TiempoRetorno, htmlAttributes: new { @class = "form-control ", disabled = "disabled" })
            </div>
        </td>

        <td>
            <div class="input-group">
                <span class="input-group-btn">
                    <a data-toggle="modal" onclick="Edit(@Model.Id,6)" href="#modal-edit" class="btn btn-primary"><i class="fa fa-pencil" data-id="@Model.Id"></i> </a>
                    <a data-toggle="modal" onclick="Delete(@Model.Id,6)" href="#modal-delete" class="btn btn-primary"><i class="fa fa-trash-o" data-id="@Model.Id"></i> </a>
                </span>
            </div>
        </td>

    }
</tr>

