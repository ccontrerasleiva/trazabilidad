@model ViewModels.Models.Estacion

@using (Html.BeginForm(nameof(Trazabilidad.Controllers.EstacionController.Edit), nameof(Resources.Strings.Models.Estacion), FormMethod.Post, htmlAttributes: new { @id = "modal-element-edit" }))

{
    @Html.HiddenFor(x => x.Id)

    <div class="col-sm-12">
        <h3 class="m-t-none m-b">Editar Estación</h3>

        <form role="form">

            <div class="form-group">
                @Html.LabelFor(tt => tt.Codigo_Recorrido, "Código Correlativo")
                @Html.TextBoxFor(model => model.Codigo_Recorrido, htmlAttributes: new { @class = "form-control " })
            </div>

            <div class="form-group">
                @Html.LabelFor(tt => tt.Nombre, "Nombre")
                @Html.TextBoxFor(model => model.Nombre, htmlAttributes: new { @class = "form-control " })
            </div>

            <div class="form-group">
                @Html.LabelFor(tt => tt.Codigo, "Código")
                @Html.TextBoxFor(model => model.Codigo, htmlAttributes: new { @class = "form-control " })
            </div>

            <div class="form-group">
                @Html.LabelFor(tt => tt.Punto_Kilometraje, "pk")
                @Html.TextBoxFor(model => model.Punto_Kilometraje, htmlAttributes: new { @class = "form-control " })
            </div>

            <div class="form-group">
                <div class="form-group">
                    @Html.RadioButtonFor(m => m.Deshabilitado, false, htmlAttributes: new { id = "Habilitado" }) @Html.Label("Habilitado", "Habilitado")
                    @Html.RadioButtonFor(m => m.Deshabilitado, true, htmlAttributes: new { id = "Deshabilitado" }) @Html.Label("Deshabilitado", "Deshabilitado")
                    @Html.ValidationMessageFor(x => x.Deshabilitado, null, new { @class = "text-danger" })
                </div>
            </div>

            <div>
                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong><i class="fa fa-plus"></i> Guardar</strong></button>
            </div>

        </form>
    </div>
}
