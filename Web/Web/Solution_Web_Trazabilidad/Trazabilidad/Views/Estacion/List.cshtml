@model IEnumerable<ViewModels.Models.Estacion>
@{
    ViewBag.Title = "Estaciones";
    ViewBag.Header = "Listado de Estaciones";
}

@*BARRA SUPERIOR*@
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-8">
        <h2>@ViewBag.Header</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="active"><strong>Estaciones</strong></li>
        </ol>
    </div>
    <div class="col-sm-4">
        <div class="title-action">
            <a data-toggle="modal" href="#modal-create" class="btn btn-primary"><i class="fa fa-plus"></i> Nueva Estación</a>
        </div>
    </div>
</div>

@*RESTO DE LA PAGINA*@
<div class="wrapper wrapper-content">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Estaciones Vigentes : @Model.Count()</h5>
            </div>
            <div class="ibox-content">
                <table class="table" id="summary">
                    <thead>
                        <tr>
                            @*<th>Id Estacion</th>*@
                            <th>Codigo Correlativo</th>
                            <th>Nombre</th>
                            <th>Código</th>
                            <th>PK</th>
                            <th>Habilitados</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count() > 0)
                        {
                            foreach (var Estacion in Model)
                            {
                                @Html.Partial("Partial/_Estacion", Estacion)
                            }
                        }
                    </tbody>
                </table>
                @*<table id="summary" class="display" width="100%"></table>*@
            </div>
        </div>
    </div>
</div>

@*MODAL*@
@Html.Partial("Partial/_Create", new ViewModels.Models.Estacion())

@section Scripts {
    <script src="~/Scripts/modal.comun.js"></script>
    @*<script src="~/Scripts/modal.stations.js"></script>*@
    <script src="~/Scripts/chosen.jquery.js"></script>

    <script>
        $('.chosen-select').chosen({ width: "100%" });
    </script>

    @*<script src="~/Scripts/DTList.js"></script>*@

    <script src="~/Scripts/lists.js"></script>
    @Scripts.Render("~/bundles/DTList")

}

@section Styles{
    <link rel="stylesheet" href="~/Content/bootstrap-chosen.css" />
}







































