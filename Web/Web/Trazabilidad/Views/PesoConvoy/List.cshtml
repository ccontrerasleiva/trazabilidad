@model IEnumerable<ViewModels.Models.PesoConvoy>
@using Resources.Strings;
@{
    ViewBag.Header = string.Format(UI.Listing, Models.PesoConvoy);
}

@*BARRA SUPERIOR*@
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-8">
        <h2>@Models.PesoConvoy</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">@UI.Home</a></li>
            <li class="active"><strong>@Models.PesoConvoy</strong></li>
        </ol>
    </div>
    <div class="col-sm-4">
        <div class="title-action">
            @*<a data-toggle="modal" href="#modal-create" class="btn btn-primary"><i class="fa fa-plus"></i> @UI.New</a>*@
            @*<a data-toggle="modal" href="#modal-create" class="btn btn-primary"><i class="fa fa-plus"></i>Nueva Locomotora</a>*@
        </div>
    </div>
</div>

@*RESTO DE LA PAGINA*@
<div class="wrapper wrapper-content">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Pesos Vigentes: @Model.Count()</h5>
            </div>
            <div class="ibox-content">

                <table class="table" id="summary">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Código Cabecera</th>
                            <th>Descripción</th>
                            <th>Fecha</th>
                            @*<th>Peso Tara</th>
                            <th>Opciones</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count() > 0 )
                        {
                            foreach (var pesos in Model)
                            {
                                if (pesos.Id != 9999)
                                {
                                     @Html.Partial("Partial/_PesosConvoy", pesos)
                                }
                               
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@*MODAL*@
@Html.Partial("Partial/_Create", new ViewModels.Models.PesoConvoy())

@section Scripts {
    <script src="~/Scripts/modal.comun.js"></script>
    @*<script src="~/Scripts/Locomotive.js"></script>*@
    <script src="~/Scripts/chosen.jquery.js"></script>
    <script>
        $('.chosen-select').chosen({ width: "100%" });
    </script>
    @*@Scripts.Render("~/bundles/modal")*@
    <script src="~/Scripts/lists.js"></script>
    @Scripts.Render("~/bundles/DTList")
}

@section Styles{
    <link rel="stylesheet" href="~/Content/bootstrap-chosen.css" />
}
















