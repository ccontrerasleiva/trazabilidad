@model ViewModels.Models.Festivo

<div id="modal-create" class="modal fade" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    @using (Html.BeginForm(nameof(Trazabilidad.Controllers.FestivoController.Create), nameof(Resources.Strings.Models.Festivo), FormMethod.Post, htmlAttributes: new { @id = "modal-element-create" }))
                    {
                        <div class="col-sm-12">
                            <h3 class="m-t-none m-b">Ingresar nuevo Feriado</h3>

                            <form role="form">
                                <div class="form-group">
                                    <label class="control-label"></label>
                                    <div class="form-group" id="data_5">
                                        <label class="control-label">Fecha</label>
                                        <div class="input-daterange input-group" id="datepicker">
                                            @Html.TextBoxFor(mo => mo.Fecha, format: "{0:dd-MM-yyyy}", htmlAttributes: new { required = "required", @class = "form-control", @type = "date", @value = @DateTime.Now.ToString("yyyy-MM") })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(x => x.Descripcion, "Descripción")
                                    @Html.TextBoxFor(x => x.Descripcion, htmlAttributes: new { @class = "form-control", placeholder = "Descripción" })
                                    @Html.ValidationMessageFor(x => x.Descripcion)
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(tt => tt.Id_Base, "Base")
                                    @Html.DropDownListFor(tt => tt.Id_Base, (SelectList)ViewBag.estaciones, "Seleccione una base", htmlAttributes: new { @class = "form-control chosen-select" })
                                    @Html.ValidationMessageFor(tt => tt.Id_Base, null, new { @class = "text-danger" })
                                </div>

                                <div>
                                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong><i class="fa fa-plus"></i> Guardar</strong></button>
                                </div>

                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

