@model ViewModels.Models.Locomotora

<tr>
    @using (Html.BeginForm(nameof(Trazabilidad.Controllers.LocomotoraController.Edit), nameof(Resources.Strings.Models.Locomotora), FormMethod.Post))
    {
        <td>@Model.Id</td>
        if (@Model.Deshabilitado == false)
        {
            <td>Habilitado</td>}
        else
        {
            <td>Deshabilitado</td>}
        <td>@Model.Descripcion</td>
        <td>@Model.Patente</td>
        <td>@Model.PesoTara</td>

        <td>
            <div class="input-group">
                <div class="input-group-btn">

                    <a data-toggle="modal" onclick="Edit(@Model.Id,17)" href="#modal-edit" class="btn btn-primary"><i class="fa fa-pencil" data-id="@Model.Id"></i> </a>
 
                </div>
            </div>

            @*<a href="@Url.Action("/","Estacions", routeValues: new { id = locomotive.PK })"><i class="fa fa-search text-default"></i></a>*@
        </td>
        @*<td>
                <a href="@Url.Action("Index","Clients", routeValues: new { id = Model.Code })" class="btn btn-xs btn-success"><i class="fa fa-search"></i></a>
                <a data-toggle="modal" href="#modal-edit" class="btn btn-xs btn-primary"><i class="fa fa-pencil"></i></a>
            </td>*@
    }
</tr>

<div id="modal-edit" class="modal fade" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row" id="LocomotoraEdit">
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-delete" class="modal fade" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row" id="LocomotoraDelete">
                </div>
            </div>
        </div>
    </div>
</div>


