@model ViewModels.Models.Holiday

<div id="modal-create" class="modal fade" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    @using (Html.BeginForm(nameof(Trazabilidad.Controllers.UsersController.Create), nameof(Resources.Strings.Models.Holidays), FormMethod.Post, htmlAttributes: new { @id = "modal-element-create" }))
                    {
                        <div class="col-sm-12">
                            <h3 class="m-t-none m-b">Agregar feriado laboral</h3>

                            <p>Ingresar un Feriado Laboral al calendario.</p>

                            <form role="form">

                                <div class="form-group">
                                    <label class="control-label"></label>
                                    <div class="form-group" id="data_5">
                                        <label class="control-label">Feriado Laboral</label>
                                        <div class="input-daterange input-group" id="datepicker">
                                            @Html.TextBoxFor(hd => hd.Date, htmlAttributes: new { @class = "input-sm form-control", name = "start" }, format: "dd/MM/yyyy")
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(hd => hd.Date, "Feriado")
                                    @Html.TextBoxFor(hd => hd.Date, htmlAttributes: new { @class = "form-control", placeholder = "Dia Feriado" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(hd => hd.Description, "Descripcion")
                                    @Html.TextBoxFor(hd => hd.Description, htmlAttributes: new { @class = "form-control", placeholder = "Descripcion de día Feriado" })
                                </div>
                                @*<div class="form-group">
                                    @Html.LabelFor(hd => hd.Estacions, "Bases")
                                    @Html.TextBoxFor(hd => hd.Estacions, htmlAttributes: new { @class = "form-control", placeholder = "Base" })
                                </div>*@

                                <div>
                                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong><i class="fa fa-plus"></i> Guardar</strong></button>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>