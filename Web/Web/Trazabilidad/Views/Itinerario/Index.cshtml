@model ViewModels.Models.Itinerario
@{
    if (Model != null){
        ViewBag.Title = $"Itinerarios";
        ViewBag.Header = $"Itinerario {Model.Descripcion} - {Model.Fecha_Inicio_Vigencia.ToString("MM/yyyy")}";
    }
}

@*BARRA SUPERIOR*@
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-8">
        <h2>@ViewBag.Header</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li><a href="@Url.Action("List", "Itinerario")">Itinerarios</a></li>
            <li class="active"><strong>@Model.Descripcion - @Model.Fecha_Inicio_Vigencia.ToString("MM/yyyy")</strong></li>
        </ol>
    </div>
    <div class="col-sm-4">
        <div class="title-action">
            @*<a data-toggle="modal" href="#modal-create" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo</a>*@
        </div>
    </div>

    @*RESTO DE LA PAGINA*@
    <div class="wrapper wrapper-content">
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Puntos de Control: 0</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Orden</th>
                                <th>Origen - Destino</th>
                                <th>Hora Salida</th>
                                <th>Hora Llegada</th>
                                <th>Tiempo de Viaje</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@*MODAL*@
@Html.Partial("Partial/_Create", new ViewModels.Models.Itinerario())