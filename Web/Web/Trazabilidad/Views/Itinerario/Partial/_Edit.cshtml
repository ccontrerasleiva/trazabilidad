@model ViewModels.Models.Itinerario

@using (Html.BeginForm(nameof(Trazabilidad.Controllers.ItinerarioController.Edit), nameof(Resources.Strings.Models.Itinerario), FormMethod.Post, htmlAttributes: new { @id = "modal-element-edit" }))
{
    @Html.HiddenFor(x => x.Id)

    <div class="col-sm-12">
        <h3 class="m-t-none m-b">Editar Itinerario</h3>

        <form role="form">

            <div class="form-group">
                @Html.LabelFor(tt => tt.Descripcion, "Descripción Itinerario")
                @Html.TextBoxFor(model => model.Descripcion, htmlAttributes: new { @class = "form-control " })
                @Html.ValidationMessageFor(tt => tt.Descripcion)
            </div>

            <div class="form-group">
                <label class="control-label">Frecuencia del Servicio</label>
                <div class="col-sm-10">
                    <label class="checkbox-inline">
                        @Html.CheckBoxFor(model => model.Frecuencia_Lunes) Lun
                    </label>
                    <label class="checkbox-inline">
                        @Html.CheckBoxFor(model => model.Frecuencia_Martes) Mar
                    </label>
                    <label class="checkbox-inline">
                        @Html.CheckBoxFor(model => model.Frecuencia_Miercoles) Mie
                    </label>
                    <label class="checkbox-inline">
                        @Html.CheckBoxFor(model => model.Frecuencia_Jueves) Jue
                    </label>
                    <label class="checkbox-inline">
                        @Html.CheckBoxFor(model => model.Frecuencia_Viernes) Vie
                    </label>
                    <label class="checkbox-inline">
                        @Html.CheckBoxFor(model => model.Frecuencia_Sabado) Sáb
                    </label>
                    <label class="checkbox-inline">
                        @Html.CheckBoxFor(model => model.Frecuencia_Domingo) Dom
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label"></label>
                <div class="form-group" id="data_5">
                    <label class="control-label">Vigencia</label>
                    <div class="input-daterange input-group" id="datepicker">
                        @Html.TextBoxFor(mo => mo.Fecha_Inicio_Vigencia, format: "{0:dd-MM-yyyy}", htmlAttributes: new { required = "required", @class = "form-control", @type = "datetime", @value = @DateTime.Now.ToString("yyyy-MM"), @onblur = "CallChangefunc(this.value)" })
                        <span class="input-group-addon">hasta</span>
                        @Html.TextBoxFor(mo => mo.Fecha_Fin_Vigencia, format: "{0:dd-MM-yyyy}", htmlAttributes: new { required = "required", @class = "form-control", @type = "datetime", @value = @DateTime.Now.AddMonths(1).ToString("yyyy-MM"), @onblur = "CallChangefunc(this.value)" })
                    </div>
                </div>
            </div>

                <br>
                <div class="form-group">
                    <div class="form-group">
                        @Html.RadioButtonFor(m => m.Deshabilitado, false, htmlAttributes: new { id = "Habilitado" }) @Html.Label("Habilitado", "Habilitado")
                        @Html.RadioButtonFor(m => m.Deshabilitado, true, htmlAttributes: new { id = "Deshabilitado" }) @Html.Label("Deshabilitado", "Deshabilitado")
                        @Html.ValidationMessageFor(x => x.Deshabilitado, null, new { @class = "text-danger" })
                    </div>
                </div>

                @*
            <div class="form-group">
                @Html.LabelFor(tt => tt.Codigo, "Código")
                @Html.TextBoxFor(model => model.Codigo, htmlAttributes: new { @class = "form-control " })
            </div>

            <div class="form-group">
                @Html.LabelFor(tt => tt.Descripcion, "Descripción")
                @Html.TextBoxFor(model => model.Descripcion, htmlAttributes: new { @class = "form-control " })
            </div>

            <div class="form-group">
                @Html.LabelFor(tt => tt.Responsable, "Responsable")
                @Html.TextBoxFor(model => model.Responsable, htmlAttributes: new { @class = "form-control " })
            </div>

            <div class="form-group">
                <div class="checkbox checkbox-primary checkbox-inline col-sm-12">
                    <div class="col-sm-4">
                        @Html.CheckBoxFor(model => model.VColacion, htmlAttributes: new { @class = "styled" })
                        @Html.LabelFor(model => model.VColacion, labelText: "Viatico Colacion")
                    </div>
                    <div class="col-sm-8">
                        @Html.CheckBoxFor(model => model.VAlojamiento, htmlAttributes: new { @class = "styled" })
                        @Html.LabelFor(model => model.VAlojamiento, labelText: "Viatico Alojamiento")
                    </div>
                </div>
            </div>

            <br><br>
            <div class="form-group">
                <div class="form-group">
                    @Html.RadioButtonFor(m => m.Deshabilitado, false, htmlAttributes: new { id = "Habilitado" }) @Html.Label("Habilitado", "Habilitado")
                    @Html.RadioButtonFor(m => m.Deshabilitado, true, htmlAttributes: new { id = "Deshabilitado" }) @Html.Label("Deshabilitado", "Deshabilitado")
                    @Html.ValidationMessageFor(x => x.Deshabilitado, null, new { @class = "text-danger" })
                </div>
            </div>*@

                <div>
                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong><i class="fa fa-plus"></i> Guardar</strong></button>
                </div>
        </form>
    </div>
}