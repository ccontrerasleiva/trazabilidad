@model IEnumerable<ViewModels.Models.TripulantePersona>
@using Resources.Strings;
@{
    ViewBag.Header = string.Format(UI.Listing,Models.TripulantePersona);
}

@*BARRA SUPERIOR*@
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-8">
        <h2>@Models.TripulantePersona</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">@UI.Home</a></li>
            <li class="active"><strong>@Models.TripulantePersona</strong></li>
        </ol>
    </div>

    <div class="col-sm-4">
        <div class="title-action">
            <a data-toggle="modal" href="#modal-create" class="btn btn-primary"><i class="fa fa-plus"></i>Nuevo Tripulante</a>
        </div>
    </div>
</div>

@*RESTO DE LA PAGINA*@
<div class="wrapper wrapper-content">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Tripulantes Vigentes: @Model.Count()</h5>
            </div>
            <div class="ibox-content">

                <table class="table" id="summary">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Sindicato</th>
                            <th>Cargo</th>
                            <th>Correo</th>
                            <th>Telefono</th>
                            <th>Deshabilitado</th>
                            <th>Base</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count() > 0) {
                            foreach (var tripulantepersona in Model) {
                                @Html.Partial("Partial/_TripulantePersona",tripulantepersona)
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@*MODAL*@
@Html.Partial("Partial/_Create",new ViewModels.Models.TripulantePersona())

@section Scripts {
    <script src="~/Scripts/modal.comun.js"></script>
    @*<script src="~/Scripts/Locomotive.js"></script>*@
    <script src="~/Scripts/chosen.jquery.js"></script>
    <script>
        $('.chosen-select').chosen({ width: "100%" });
    </script>
    @*@Scripts.Render("~/bundles/modal")*@
    <script src="~/Scripts/lists.js"></script>
    @Scripts.Render("~/bundles/DTList")
}

@section Styles{
    <link rel="stylesheet" href="~/Content/bootstrap-chosen.css" />
}