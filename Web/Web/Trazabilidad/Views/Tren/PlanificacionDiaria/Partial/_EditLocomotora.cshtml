@model ViewModels.Models.Tren_Locomotora
@using (Html.BeginForm(nameof(Trazabilidad.Controllers.TrenController.EditLocom), nameof(Resources.Strings.Models.Tren), FormMethod.Post, htmlAttributes: new { @id = "modal-element-edit" }))
{
    @Html.HiddenFor(x => x.Id)

    <div class="col-sm-12">
        <h3 class="m-t-none m-b">Editar Locomotora</h3>

        <form role="form">
            <div class="form-group">
                @Html.LabelFor(tt => tt.Locomotora.Patente, "Locomotora")

                @Html.DropDownListFor(tt => tt.Id_Locomotora, (SelectList)ViewBag.Locomotoras, "Seleccione una Locomotora", htmlAttributes: new { @class = "form-control chosen-select" })
                @Html.ValidationMessageFor(tt => tt.Id_Locomotora, null, new { @class = "text-danger" })
            </div>

            <div>
                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong><i class="fa fa-plus"></i> Guardar</strong></button>
            </div>
        </form>
    </div>
}
