@model ViewModels.Models.Cliente

<tr>

    @using (Html.BeginForm(nameof(Trazabilidad.Controllers.ClienteController), nameof(Resources.Strings.Models.Cliente), FormMethod.Post))
    {
        <td>@Model.Id</td>
        if (@Model.Deshabilitado == false)
        {
            <td>Habilitado</td>}
        else
        {
            <td>Deshabilitado</td>}
            
        <td>@Model.Nombre</td>
        <td>@Model.Celular</td>
        <td>
            <div class="input-group">
                <div class="input-group-btn">
                    <a data-toggle="modal" onclick="Edit(@Model.Id,15)" href="#modal-edit" class="btn btn-primary"><i class="fa fa-pencil" data-id="@Model.Id"></i> </a>
                   
                </div>
            </div>
        </td>
    }
</tr>


    <div id="modal-edit" class="modal fade" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row" id="ClienteEdit">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="modal-delete" class="modal fade" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row" id="ClienteDelete">
                    </div>
                </div>
            </div>
        </div>
    </div>