@model ViewModels.Models.Cliente
@using Trazabilidad.Controllers;
@using Resources.Strings;

@using (Html.BeginForm(nameof(Trazabilidad.Controllers.ClienteController.Edit), nameof(Resources.Strings.Models.Cliente), FormMethod.Post))

{
    <div class="col-sm-12">
        <h3 class="m-t-none m-b">Editar Cliente</h3>

        <form role="form">
            @Html.HiddenFor(cl => cl.Id)
            <div class="form-group">
                @Html.LabelFor(cl => cl.Id, "Código")
                @Html.TextBoxFor(cl => cl.Id, htmlAttributes: new { @class = "form-control", placeholder = "Código del Cliente" })
            </div>
            <div class="form-group">
                @Html.LabelFor(cl => cl.Nombre, "Nombre")
                @Html.TextBoxFor(cl => cl.Nombre, htmlAttributes: new { @class = "form-control", placeholder = "Nombre" })
            </div>
            <div class="form-group">
                @Html.LabelFor(cl => cl.Celular, "Celular")
                @Html.TextBoxFor(cl => cl.Celular, htmlAttributes: new { @class = "form-control", placeholder = "Celular" })
            </div>
            <div class="form-group">
                @Html.LabelFor(tt => tt.Id, "Estado")

            </div>
            <div class="form-group">
                <div class="form-group">
                    @Html.RadioButtonFor(m => m.Deshabilitado, false, htmlAttributes: new { id = "Habilitado" }) @Html.Label("Habilitado", "Habilitado")
                    @Html.RadioButtonFor(m => m.Deshabilitado, true, htmlAttributes: new { id = "Deshabilitado" }) @Html.Label("Deshabilitado", "Deshabilitado")
                    @Html.ValidationMessageFor(x => x.Deshabilitado, null, new { @class = "text-danger" })
                </div>
            </div>
            <div>
                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong><i class="fa fa-plus"></i> Guardar</strong></button>
            </div>
        </form>
    </div>

}
