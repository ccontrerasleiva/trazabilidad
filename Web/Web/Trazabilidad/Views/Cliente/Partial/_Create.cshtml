@model ViewModels.Models.Cliente

<div id="modal-create" class="modal fade" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    @using(Html.BeginForm(nameof(Trazabilidad.Controllers.ClienteController.Create), nameof(Resources.Strings.Models.Cliente), FormMethod.Post, htmlAttributes: new { @id = "modal-element-create" }))
                    {
                        <div class="col-sm-12">
                            <h3 class="m-t-none m-b">Crear Nuevo Cliente</h3>

                           @* <p>Ingresar un nuevo cliente al sistema con el fin de asignarle servicios.</p>*@

                            <form role="form">
                                <div class="form-group">
                                    @Html.LabelFor(cl => cl.Nombre, "Nombre")
                                    @Html.TextBoxFor(cl => cl.Nombre, htmlAttributes: new { @class = "form-control", placeholder = "Nomre del Cliente" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(cl => cl.Celular, "Celular")
                                    @Html.TextBoxFor(cl => cl.Celular, htmlAttributes: new { @class = "form-control", placeholder = "Celular" })
                                </div>
                                
                                <div>
                                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong><i class="fa fa-plus"></i> Guardar</strong></button>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>