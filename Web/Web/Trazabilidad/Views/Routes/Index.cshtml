@model IEnumerable<ViewModels.Models.Route>
@{
    ViewBag.Title = "Itinerarios";
    ViewBag.Header = "Itinerarios Vigentes";
}

@*BARRA SUPERIOR*@
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-8">
        <h2>@ViewBag.Header</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="active"><strong>Itinerarios</strong></li>
        </ol>
    </div>
    <div class="col-sm-4">
        @*<div class="title-action">
            <a data-toggle="modal" href="#modal-form" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo Itinerario</a>
        </div>*@
    </div>
</div>

@*RESTO DE LA PAGINA*@
<div class="wrapper wrapper-content">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Servicios Vigentes</h5>
                <div class="ibox-tools">
                    <a class="collapse-link" data-vivaldi-spatnav-clickable="1">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Orden</th>
                            <th>Ruta</th>
                            <th>Hora Inicio</th>
                            <th>Hora Fin</th>
                            <th>Tiempo Recorrido</th>
                            <th>Distancia</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model != null){
                            foreach(var route in Model)
                            {
                                <tr>
                                    <td>@route.Order</td>
                                    <td>@route.Origin.Code - @route.Destination.Code</td>
                                    <td>@route.DepartureTime</td>
                                    <td>@route.ArrivalTime</td>
                                    <td>@route.TravelTime</td>
                                    <td>@route.Distance</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>